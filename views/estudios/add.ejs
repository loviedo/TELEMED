<!--including header content which is common for all pages-->
<%- include ../layouts/header.ejs %>    
 
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
    <h1>Formulario de Registro de Estudio</h1>
    <div class="register-form-w3layouts">
        
        <form id="uploadForm" ref="uploadForm" action="/estudios/upload" method="post" enctype="multipart/form-data">
            <h3 class="sub-heading-agileits">Cargar Archivo</h3>
            <div class="field-agileinfo-spc form-w3-agile-text1">
                <input type="file" name="foo">
                <input type="submit" value="Cargar Archivo">
            </div>
        </form>

        <form action="/estudios/add" method="post" name="form1">
            <div class="clear"></div>
            <h3 class="sub-heading-agileits">Detalles Personales</h3>
            <div class="main-flex-w3ls-sectns">
                <div class="field-agileinfo-spc form-w3-agile-text1">
                    <input type="text" name="ci" placeholder="Ingresar C.I." required="*">
                </div>
                <div class="field-agileinfo-spc form-w3-agile-text2">
                    <input type="text" name="nombre" placeholder="Ingresar Nombre" Required="">
                </div>
            </div>
            <div class="main-flex-w3ls-sectns">
                <div class="field-agileinfo-spc form-w3-agile-text1">
                    <input type="text" name="apellido" placeholder="Ingresar Apellido" required="*">
                </div>
                <div class="field-agileinfo-spc form-w3-agile-text2">
                    <input type="text" name="fec_estudio" id="fec_estudio" value="" placeholder="Fecha estudio (DD/MM/AAAA)" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'dd/mm/yyyy';}" Required="">
                </div>
            </div>
            <div class="main-flex-w3ls-sectns">
                <div class="field-agileinfo-spc form-w3-agile-text1">
                    <input type="text" name="tel" placeholder="Ingresar Telefono"  required="*">
                </div>
                <div class="field-agileinfo-spc form-w3-agile-text2">
                    <input type="text" name="edad" placeholder="Ingresar Edad" Required="">
                </div>
            </div>
			<div class="radio-section">
				<h6>SEXO</h6>
				<ul class="radio-buttons-w3-agileits">
					<li>
						<input type="radio" name="sexo" value="M">
						<label for="a-option">MASCULINO</label>
						<div class="check"></div>
					</li>
					<li>
						<input type="radio" name="sexo" value="F">
						<label for="b-option">FEMENINO</label>
						<div class="check">
							<div class="inside"></div>
						</div>
					</li>
				</ul>
				<div class="clear"></div>
            </div>

            <h3 class="sub-heading-agileits">Detalles Estudio</h3>
            <div class="radio-section">
                <h6>ESTUDIOS</h6> &nbsp; <a href="/estudios/faq" target="_blank">Ver Costos</a>
                <div class="field-agileinfo-spc form-w3-agile-text1">
                    <input type="checkbox" name="tomo">
                    <label>TOMOGRAFÍA &nbsp;&nbsp;</label>
                    <input type="checkbox" name="rayo">
                    <label>RAYOS X &nbsp;&nbsp;</label>
                    <input type="checkbox" name="reso">
                    <label>RESONANCIA</label>
                </div>
            </div>
            <div class="radio-section">
                    <h6>CON CONTRASTE?</h6>
                    <ul class="radio-buttons-w3-agileits">
                        <li>
                            <input type="radio" name="contraste" value="1">
                            <label for="a-option">SI</label>
                            <div class="check"></div>
                        </li>
                        <li>
                            <input type="radio" name="contraste" value="0">
                            <label for="b-option">NO</label>
                            <div class="check">
                                <div class="inside"></div>
                            </div>
                        </li>
                    </ul>
                <div class="clear"></div>
            </div>
            <div class="radio-section">
                <h6>PARTE</h6>
                <div class="field-agileinfo-spc form-w3-agile-text1">
                    <input type="checkbox" name="craneo">
                    <label>Craneo &nbsp;&nbsp;</label>
                    <input type="checkbox" name="cuello">
                    <label>Cuelo &nbsp;&nbsp;</label>
                    <input type="checkbox" name="torax">
                    <label>Tórax &nbsp;&nbsp;</label>
                    <input type="checkbox" name="abdomen">
                    <label>Abdomen &nbsp;&nbsp;</label>
                    <input type="checkbox" name="pelvis">
                    <label>Pelvis &nbsp;&nbsp;</label>
                    <input type="checkbox" name="hombro">
                    <label>Hombro &nbsp;&nbsp;</label>
                    <input type="checkbox" name="brazo">
                    <label>Brazo &nbsp;&nbsp;</label>
                    <input type="checkbox" name="codo">
                    <label>Codo &nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input type="checkbox" name="ante">
                    <label>Antebrazo &nbsp;&nbsp;&nbsp;</label>
                    <input type="checkbox" name="muneca">
                    <label>Muñeca &nbsp;&nbsp;&nbsp;</label>
                    <input type="checkbox" name="mano">
                    <label>Mano &nbsp;&nbsp;&nbsp;</label>
                    <input type="checkbox" name="cade">
                    <label>Cadera &nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input type="checkbox" name="muslo">
                    <label>Muslo &nbsp;&nbsp;&nbsp;</label>
                    <input type="checkbox" name="rodilla">
                    <label>Rodilla &nbsp;&nbsp;</label>
                    <input type="checkbox" name="pierna">
                    <label>Pierna &nbsp;&nbsp;</label>
                    <input type="checkbox" name="tobillo">
                    <label>Tobillo &nbsp;&nbsp;</label>
                    <input type="checkbox" name="pie">
                    <label>Pie &nbsp;&nbsp;</label>
                    <input type="checkbox" name="urotac">
                    <label>UROTAC &nbsp;&nbsp;</label>
                    <input type="checkbox" name="completo">
                    <label>COMPLETO &nbsp;&nbsp;</label>
                </div>
            </div>
            <h3 class="sub-heading-agileits">Detalles Médicos</h3>
            <div class="field-agileinfo-spc form-w3-agile-text1">
                <input type="text" name="med_sol" placeholder="Ingresar Médico solicitante" autofocus required="*">
            </div>
            <!--<div class="field-agileinfo-spc form-w3-agile-text2">
                <input type="text" name="nro_reg" placeholder="Ingresar nro de registro" autofocus Required="">
            </div>-->
            <div class="field-agileinfo-spc form-w3-agile-text1">
                <input type="text" name="mot_est" placeholder="Ingresar motivo estudio" autofocus required="">
            </div>
            <div class="field-agileinfo-spc form-w3-agile-text2">
                <input type="text" name="lugar_est" placeholder="Ingresar lugar estudio" Required="">
            </div>
            <!-- BOTONES FINALES -->
            <input type="submit" name="Submit" value="Agregar"/>
            <input type="reset" value="Limpiar Datos">
            <div class="clear"></div>
        </form>
